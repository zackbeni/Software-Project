<% layout('./layouts/boilerplate') %>
<h1 style = " text-align: center" class="mb-4">Welcome to <%= cat.category %> Category Page</h1>
<div class="container text-center">
    <div class="row row-cols-4 resource-card align-items-start">
<% for (r of resources) {%>
        <div class="card col mb-5" style="width: 19rem;" >
            <a href="/resources/<%= r._id%>"><img src="/images/<%= r.source %>.png" class="card-img-top bg-image hover-zoom" alt="..." style="height: 170px; width: auto; max-width: 300px"></a>
            <div class="card-body">
            <a class="card-text" href="/resources/<%= r._id%>"><%= r.source %></a>
            </div>
        </div>
    <% } %>
    </div>
</div>