<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New resources</h1>
    <div class="col-6 offset-3">
        <form action="/resources" method="POST" novalidate class = "validated-form">
            <div class="mb-3">
                <label class="form-label" for="source">Source</label>
                <select class="form-control" name="resource[source]" id="source">
                    <% for (let s of sources) {%>
                        <option value="<%= s %>"><%= s %></option>
                    <% } %>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="resource[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="url">Url</label>
                <input class="form-control" type="text" id="url" name="resource[url]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="resource[description]" required></textarea>

            </div>
            <div class="mb-3">
                <label class="form-label" for="subject">Subject</label>
                <select class="form-control" name="resource[subject]" id="subject">
                    <% for (let s of subjects) {%>
                        <option value="<%= s %>"><%= s %></option>
                    <% } %>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="category">Category</label>
                <select class="form-control" name="resource[category]" id="category">
                    <% for (let c of categories) {%>
                        <option value="<%= c %>"><%= c %></option>
                    <% } %>
                </select>
            </div>
           
            <div class="mb-3">
                <button class="btn btn-success">Add Resource</button>
            </div>
        </form>
        <a href="/resources">All resources</a>
    </div>
</div>


<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
(() => {
    'use strict'
  
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.validated-form')
  
    // Loop over them and prevent submission
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
  
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>