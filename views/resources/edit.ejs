<% layout('./layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit a Resource</h1>
    <div class="col-6 offset-3">
        <form action="/resources/<%=resource._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="resource[title]"
                    value="<%=resource.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Url</label>
                <input class="form-control" type="text" id="url" name="resource[url]"
                    value="<%=resource.url %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="resource[description]"><%= resource.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update resource</button>
            </div>
        </form>
        <form action="/resources/<%=resource._id%>?_method=DELETE" method="POST">
            <div class="mb-3">
                <button class="btn btn-info">Delete</button>
            </div>
        </form>
        <a href="/resources/<%= resource._id%>">Back To Resource Page</a>

    </div>
</div>